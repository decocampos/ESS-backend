generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum Status {
  pendente
  realizando
  concluida
}

model Tarefa {
  id             Int      @id @default(autoincrement())
  titulo         String
  descricao      String?
  status         Status
  dataVencimento DateTime? @map("data_vencimento")

  @@map("tarefas")
}
